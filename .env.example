# ============================================
# SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development
# production | development | test

# ============================================
# SEGURANÇA
# ============================================
# Chave de criptografia AES-256 (32 bytes)
ENCRYPTION_KEY=your_32_byte_encryption_key_here_123456

# Secret para JWT
JWT_SECRET=your_jwt_secret_key_here

# Habilitar autenticação na API
API_AUTH_ENABLED=false

# ============================================
# WHATSAPP
# ============================================
# Nome da sessão (usado para multi-instâncias)
SESSION_NAME=octavioaugusto-session

# Timeout de sessão (em milissegundos)
SESSION_TIMEOUT=1800000

# ============================================
# INTELIGÊNCIA ARTIFICIAL
# ============================================
# Habilitar IA
AI_ENABLED=true

# Confiança mínima para usar resposta da IA (0.0 - 1.0)
AI_MIN_CONFIDENCE=0.75

# Habilitar modo de aprendizado automático
AI_LEARNING_MODE=true

# Tamanho máximo do contexto (últimas N mensagens)
AI_MAX_CONTEXT_SIZE=10

# ============================================
# RATE LIMITING
# ============================================
# Máximo de mensagens por usuário
RATE_LIMIT_MAX_MESSAGES=30

# Janela de tempo em ms (60000 = 1 minuto)
RATE_LIMIT_WINDOW_MS=60000

# Máximo de requisições por IP na API
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SEGURANÇA API
# ============================================
# CORS - Origens permitidas (separadas por vírgula)
CORS_ORIGINS=*
# CORS_ORIGINS=http://localhost:3000,https://seudominio.com

# Habilitar helmet (segurança headers HTTP)
HELMET_ENABLED=true

# ============================================
# LOGS
# ============================================
# Nível de log (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Tamanho máximo do arquivo de log (em bytes)
LOG_MAX_SIZE=10485760

# Número máximo de arquivos de log
LOG_MAX_FILES=5

# Formato de log (json, simple)
LOG_FORMAT=json

# ============================================
# BANCO DE DADOS
# ============================================
# Caminho do banco SQLite
DB_PATH=./database/bot.db

# Habilitar WAL mode (melhor performance)
DB_WAL_MODE=true

# Timeout de queries (em ms)
DB_TIMEOUT=5000

# ============================================
# BUSINESS RULES
# ============================================
# Habilitar verificação de horário comercial
BUSINESS_HOURS_ENABLED=true

# Horário de início (formato HH:MM)
BUSINESS_HOURS_START=09:00

# Horário de término (formato HH:MM)
BUSINESS_HOURS_END=18:00

# Dias da semana (0=Domingo, 1=Segunda, ..., 6=Sábado)
BUSINESS_DAYS=1,2,3,4,5

# ============================================
# DASHBOARD
# ============================================
# Habilitar dashboard
DASHBOARD_ENABLED=true

# Intervalo de atualização do dashboard (em ms)
DASHBOARD_UPDATE_INTERVAL=10000

# ============================================
# NOTIFICAÇÕES
# ============================================
# Habilitar notificações
NOTIFICATIONS_ENABLED=true

# Webhook URL para notificações
WEBHOOK_URL=

# Email para alertas (opcional)
ALERT_EMAIL=

# ============================================
# RECURSOS AVANÇADOS
# ============================================
# Habilitar cache Redis (requer Redis instalado)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Habilitar métricas Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Habilitar modo debug
DEBUG_MODE=false

# ============================================
# BACKUP
# ============================================
# Habilitar backup automático
AUTO_BACKUP_ENABLED=true

# Intervalo de backup (em horas)
AUTO_BACKUP_INTERVAL=24

# Número máximo de backups mantidos
MAX_BACKUPS=7

# ============================================
# PERFORMANCE
# ============================================
# Tamanho máximo do body (em bytes)
MAX_REQUEST_SIZE=10485760

# Timeout de requisições HTTP (em ms)
HTTP_TIMEOUT=30000

# Habilitar compressão gzip
COMPRESSION_ENABLED=true
